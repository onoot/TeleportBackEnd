apiVersion: v1
kind: Secret
metadata:
  name: messenger-secrets
  namespace: messenger
type: Opaque
stringData:
  # Kafka configuration
  kafka-brokers: "kafka-broker1:9092,kafka-broker2:9092"
  kafka-username: "your-kafka-username"
  kafka-password: "your-kafka-password"
  
  # Redis configuration
  redis-password: "your-redis-password"
  
  # JWT configuration
  jwt-secret: "your-jwt-secret"
  
  # Web Push configuration
  web-push-public-key: "your-web-push-public-key"
  web-push-private-key: "your-web-push-private-key"
  
  # Database configuration
  db-host: "your-db-host"
  db-user: "your-db-user"
  db-password: "your-db-password"
  db-name: "your-db-name" 